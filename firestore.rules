rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Feedback collection - anyone can create feedback, but not read or modify
    match /feedback/{feedbackId} {
      // Allow anyone to submit feedback
      allow create: if request.resource.data.keys().hasAll(['rating', 'feedback', 'timestamp'])
                    && request.resource.data.rating is int
                    && request.resource.data.rating >= 1
                    && request.resource.data.rating <= 5
                    && request.resource.data.feedback is string
                    && request.resource.data.timestamp == request.time;

      // Allow anyone to read feedback
      allow read: if true;
      // Only allow updating/deleting for authenticated admin users
      allow update, delete: if false;
    }

    // Hosts collection - allow full access for now (we can add authentication later)
    match /hosts/{hostId} {
      allow read, write: if true;
    }
  }
}
